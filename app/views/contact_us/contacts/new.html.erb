<h2><%= t('.contact_us') %></h2>
<%= form_for @contact, :url => contacts_path, :html => {:class => 'form-horizontal'} do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if ContactUs.require_name %>
    <div class="control-group">
      <%= f.label :name, (t('.name') + content_tag(:abbr, ' *', { :title => I18n.t(:required), :class => 'required' })).html_safe %>
      <%= f.text_field :name, :class => 'text_field span5' %>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :email, (t('.email') + content_tag(:abbr, ' *', { :title => I18n.t(:required), :class => 'required' })).html_safe %>
    <%= f.text_field :email, :class => 'text_field span5' %>
  </div>
  <% if ContactUs.require_phone %>
    <div class="control-group">
      <%= f.label :phone, (t('.phone')).html_safe %>
      <%= f.text_field :phone, :class => 'text_field span5' %>
    </div>
  <% end %>
  <% if ContactUs.require_subject %>
    <div class="control-group">
      <%= f.label :subject, (t('.subject') + content_tag(:abbr, ' *', { :title => I18n.t(:required), :class => 'required' })).html_safe %>
      <%= f.text_field :subject, :class => 'text_field span5' %>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :message, (t('.message') + content_tag(:abbr, ' *', { :title => I18n.t(:required), :class => 'required' })).html_safe %>
    <%= f.text_area :message, :class => 'text_area span5' %>
  </div>
  <div class="controls">
    <%= f.submit t('.submit').html_safe, :class => 'btn' %>
  </div>
<% end %>
